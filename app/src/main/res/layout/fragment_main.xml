<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/fragment_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MainFragment">

    <LinearLayout
        android:layout_marginTop="@dimen/fragment_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true">

        <ImageSwitcher
            android:id="@+id/visibility_switcher"
            android:layout_width="@dimen/balance_eye_size"
            android:layout_height="@dimen/balance_eye_size"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_padding">

            <ImageView
                android:id="@+id/image_balance_visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_eye_open"
                tools:ignore="ContentDescription"
                />

            <ImageView
                android:id="@+id/image_balance_invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_eye_close"
                tools:ignore="ContentDescription"
                />
        </ImageSwitcher>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textSize="@dimen/balance_text_size"
            android:textColor="@color/secondary_text"
            android:paddingEnd="@dimen/standard_padding"
            android:paddingStart="@dimen/standard_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:labelFor="@+id/balance"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/balance_size"
                android:textColor="@color/primary_text"
                android:layout_alignParentEnd="true"
                />

            <Switch
                android:id="@+id/currency_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_margin"
                android:textOn="@string/rub"
                android:textOff="@string/usd"
                android:layout_below="@+id/balance"
                android:layout_alignEnd="@+id/balance"
                />
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="@dimen/fragment_margin"
        android:layout_marginBottom="@dimen/fragment_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/dollar_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar_rate"
            android:textSize="@dimen/rate_text_size"
            android:textColor="@color/divider"
            android:paddingEnd="@dimen/standard_padding"
            android:paddingStart="@dimen/standard_padding"
            />

    </LinearLayout>

</RelativeLayout>