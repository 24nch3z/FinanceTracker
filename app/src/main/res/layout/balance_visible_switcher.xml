<?xml version="1.0" encoding="utf-8"?>
<ImageSwitcher
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/balance_eye_size"
    android:layout_height="@dimen/balance_eye_size"
    android:id="@+id/visibility_switcher">

    <ImageView
        android:id="@+id/image_balance_visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_eye_open"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/image_balance_invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_eye_close"
        tools:ignore="ContentDescription"
        />

</ImageSwitcher>